---
import "../styles/global.css";

const siteUrl = 'https://lucaguiraldello.net';
const title = 'Luca Guiraldello — Fullstack Developer';
const description = 'Portfólio profissional com projetos em .NET, cloud, arquitetura e engenharia de software.';
const image = `${siteUrl}/images/profile.jpg`;

const navItems = [
  { href: "#sobre", key: "nav.about", label: "Sobre" },
  { href: "#experiencias", key: "nav.experience", label: "Experiências" },
  { href: "#formacoes", key: "nav.education", label: "Formações" },
  { href: "#habilidades", key: "nav.skills", label: "Habilidades" },
  { href: "#projetos", key: "nav.projects", label: "Projetos" },
  { href: "#referencias", key: "nav.references", label: "Referências" },
];
---

<!doctype html>
<html lang="pt-BR">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="icon" href="/favicon/favicon.ico" sizes="any">
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon/favicon-32x32.png">
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon/favicon-16x16.png">
    <link rel="apple-touch-icon" href="/favicon/apple-touch-icon.png">
    <meta
      id="meta-description"
      name="description"
      content="Portfólio de desenvolvedor fullstack com foco em .NET e backend."
    />
    <title>{title}</title>
    <meta name="description" content={description} />

    <!-- Open Graph -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content={siteUrl} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={image} />

    <!-- WhatsApp / Facebook -->
    <meta property="og:image:width" content="1200" />
    <meta property="og:image:height" content="630" />

    <!-- Twitter (funciona no WhatsApp também) -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={image} />
    <!-- Google tag (gtag.js) -->
    <script async src="https://www.googletagmanager.com/gtag/js?id=G-P8SYZSY0R9"></script>
    <script>
      window.dataLayer = window.dataLayer || [];
      function gtag(){dataLayer.push(arguments);}
      gtag('js', new Date());

      gtag('config', 'G-P8SYZSY0R9');
    </script>
  </head>
  <body class="bg-slate-950 text-slate-100 antialiased">
    <header class="sticky top-0 z-50 border-b border-white/10 bg-slate-950/80 backdrop-blur">
      <div class="mx-auto flex w-full max-w-6xl items-center justify-between px-4 py-4 sm:px-6">
        <a href="#topo" class="flex items-center gap-3 text-lg font-semibold tracking-wide text-white">
          <img
            src="/images/profile.jpg"
            alt="Foto de perfil"
            class="h-10 w-10 rounded-full border border-white/60 object-cover sm:h-12 sm:w-12"
            loading="lazy"
          />
          <span data-i18n="brand.name">Luca Guiraldello</span>
        </a>
        <button
          id="menu-toggle"
          class="inline-flex items-center gap-2 rounded-full border border-white/10 bg-white/5 px-4 py-2 text-sm font-medium text-white shadow-sm transition hover:border-white/30 hover:bg-white/10 md:hidden"
          aria-controls="mobile-menu"
          aria-expanded="false"
          type="button"
        >
          <span data-i18n="nav.menu">Menu</span>
          <span class="text-base">☰</span>
        </button>
        <button
          id="lang-toggle"
          class="hidden items-center rounded-full border border-white/10 bg-white/5 px-3 py-2 text-xs font-semibold uppercase tracking-wide text-white transition hover:border-white/30 hover:bg-white/10 sm:inline-flex"
          type="button"
          aria-label="Alternar idioma"
        >
          PT
        </button>
        <nav class="hidden md:block" aria-label="Navegação principal">
          <ul class="flex items-center gap-6 text-sm font-medium text-slate-200">
            {navItems.map((item) => (
              <li>
                <a class="transition hover:text-white" href={item.href} data-i18n={item.key}>
                  {item.label}
                </a>
              </li>
            ))}
          </ul>
        </nav>
      </div>
      <div id="mobile-menu" class="hidden border-t border-white/10 bg-slate-950 md:hidden">
        <nav class="mx-auto w-full max-w-6xl px-4 py-4 sm:px-6" aria-label="Navegação mobile">
          <ul class="flex flex-col gap-3 text-sm font-medium text-slate-200">
            {navItems.map((item) => (
              <li>
                <a
                  class="block rounded-lg px-3 py-2 transition hover:bg-white/10 hover:text-white"
                  href={item.href}
                  data-i18n={item.key}
                >
                  {item.label}
                </a>
              </li>
            ))}
          </ul>
          <button
            id="lang-toggle-mobile"
            class="mt-4 inline-flex items-center rounded-full border border-white/10 bg-white/5 px-4 py-2 text-xs font-semibold uppercase tracking-wide text-white transition hover:border-white/30 hover:bg-white/10"
            type="button"
            aria-label="Alternar idioma"
          >
            PT
          </button>
        </nav>
      </div>
    </header>

    <main id="topo" class="mx-auto w-full max-w-6xl px-4 pb-16 pt-12 sm:px-6 lg:pb-24">
      <section class="flex flex-col gap-8 lg:flex-row lg:items-center lg:gap-12">
        <div class="flex-1 space-y-6">
          <p class="text-sm uppercase tracking-[0.3em] text-slate-400" data-i18n="hero.kicker">
            Desenvolvedor Fullstack
          </p>
          <h1 class="text-3xl font-semibold leading-tight text-white sm:text-4xl lg:text-5xl">
            <span data-i18n="hero.title">
              Construindo soluções escaláveis em .NET, APIs e arquiteturas orientadas a domínio.
            </span>
          </h1>
          <p class="max-w-2xl text-base text-slate-300 sm:text-lg">
            <span data-i18n="hero.description">
              Sou um desenvolvedor fullstack com foco em backend e ecossistema Microsoft. Ajudo times a entregar
              produtos robustos, com integrações confiáveis, testes automatizados e observabilidade desde o
              primeiro deploy.
            </span>
          </p>
          <div class="flex flex-wrap gap-3">
            <a
              href="#projetos"
              class="rounded-full bg-emerald-400 px-5 py-2 text-sm font-semibold text-emerald-950 transition hover:bg-emerald-300"
              data-i18n="hero.cta.projects"
            >
              Ver projetos
            </a>
            <button
              id="cv-modal-open"
              type="button"
              class="rounded-full border border-emerald-400/70 px-5 py-2 text-sm font-semibold text-emerald-200 transition hover:border-emerald-300 hover:text-emerald-100"
              data-i18n="hero.cta.cv"
            >
              Download do CV
            </button>
            <a
              href="#referencias"
              class="rounded-full border border-white/20 px-5 py-2 text-sm font-semibold text-white transition hover:border-white/40"
              data-i18n="hero.cta.contact"
            >
              Contato e referências
            </a>
          </div>
        </div>
        <div class="flex-1">
          <div class="rounded-3xl border border-white/10 bg-gradient-to-br from-slate-900 via-slate-900 to-emerald-950/40 p-6 shadow-xl">
            <div class="space-y-4">
              <p class="text-sm font-semibold text-emerald-300" data-i18n="summary.title">Resumo rápido</p>
              <ul class="space-y-3 text-sm text-slate-200">
                <li data-i18n="summary.item1">+8 anos entregando APIs REST, gRPC e mensageria em .NET.</li>
                <li data-i18n="summary.item2">
                  Experiência com AWS (RDS, SQS, ECS, EKS), CI/CD e infraestrutura como código.
                </li>
                <li data-i18n="summary.item3">Integrações com ERPs, gateways de pagamento e sistemas legados.</li>
                <li data-i18n="summary.item4">Mentoria de equipes e definição de padrões de arquitetura.</li>
              </ul>
            </div>
          </div>
        </div>
      </section>

      <section id="sobre" class="mt-16 scroll-mt-24 space-y-6">
        <div class="space-y-2">
          <p class="text-sm font-semibold uppercase tracking-[0.25em] text-emerald-300" data-i18n="about.kicker">
            Sobre
          </p>
          <h2 class="text-2xl font-semibold text-white sm:text-3xl" data-i18n="about.title">
            Paixão por backend confiável
          </h2>
        </div>
        <p class="text-base text-slate-300 sm:text-lg" data-i18n="about.description">
          Trabalho com foco em estabilidade, performance e escalabilidade. Tenho vivência em pipelines de
          integração contínua, code reviews e práticas de observabilidade para manter produtos saudáveis em
          produção. Gosto de traduzir necessidades de negócio em soluções técnicas sustentáveis.
        </p>
      </section>

      <section id="experiencias" class="mt-16 scroll-mt-24 space-y-8">
        <div class="space-y-2">
          <p
            class="text-sm font-semibold uppercase tracking-[0.25em] text-emerald-300"
            data-i18n="experience.kicker"
          >
            Experiências
          </p>
          <h2 class="text-2xl font-semibold text-white sm:text-3xl" data-i18n="experience.title">
            Histórico profissional
          </h2>
        </div>
        <div class="grid gap-6 lg:grid-cols-2">
          <article class="rounded-2xl border border-white/10 bg-white/5 p-6">
            <div class="space-y-1">
              <p class="text-xs font-semibold uppercase tracking-[0.2em] text-emerald-300" data-i18n="experience.role1.company">
                Zup Innovation
              </p>
              <h3 class="text-lg font-semibold text-white" data-i18n="experience.role1.title">
                Full Stack Developer Senior
              </h3>
              <p class="text-sm text-slate-400" data-i18n="experience.role1.period">
                abr de 2025 - o momento · 10 meses · Campinas, SP - Brasil · Remoto
              </p>
              <p class="text-sm font-semibold text-slate-200" data-i18n="experience.role1.project">
                Desenvolvedor de Software | Gestão de Leads - Investimentos (Itaú)
              </p>
            </div>
            <ul class="mt-4 space-y-2 text-sm text-slate-300">
              <li data-i18n="experience.role1.item1">
                Experiência com arquitetura de microsserviços, sistemas distribuídos, EDA, REST APIs, filas e serviços backend de alta performance.
              </li>
              <li data-i18n="experience.role1.item2">
                Foco em performance, escalabilidade, observabilidade, monitoramento, logging e padrões de resiliência.
              </li>
              <li data-i18n="experience.role1.item3">
                Participação ativa em arquitetura, code reviews, decisões técnicas e melhoria contínua.
              </li>
              <li data-i18n="experience.role1.item4">
                Desenvolvimento com .NET (C#, .NET 6/7/8, ASP.NET Core, Web API), PostgreSQL, AWS, Kafka, Docker, Terraform e CI/CD.
              </li>
            </ul>
          </article>
          <article class="rounded-2xl border border-white/10 bg-white/5 p-6">
            <div class="space-y-1">
              <p class="text-xs font-semibold uppercase tracking-[0.2em] text-emerald-300" data-i18n="experience.role2.company">
                Grupo Boticário
              </p>
              <h3 class="text-lg font-semibold text-white" data-i18n="experience.role2.title">
                Full Stack Developer Senior
              </h3>
              <p class="text-sm text-slate-400" data-i18n="experience.role2.period">
                ago de 2024 - fev de 2025 · 7 meses · Campinas, SP - Brasil · Remoto
              </p>
              <p class="text-sm font-semibold text-slate-200" data-i18n="experience.role2.project">
                Plataforma de previsão de demanda
              </p>
            </div>
            <ul class="mt-4 space-y-2 text-sm text-slate-300">
              <li data-i18n="experience.role2.item1">
                Desenvolvimento de plataforma de planejamento com dados de previsão e ML para otimizar produção e vendas.
              </li>
              <li data-i18n="experience.role2.item2">
                Kotlin e React para ajustes de curvas estatísticas conforme sazonalidade.
              </li>
              <li data-i18n="experience.role2.item3">
                Stack: GCP BigQuery, Postgres, AWS, Kotlin (Spring), Node.js, React microfrontend e CI/CD.
              </li>
            </ul>
          </article>
        </div>
      </section>

      <section id="formacoes" class="mt-16 scroll-mt-24 space-y-8">
        <div class="space-y-2">
          <p class="text-sm font-semibold uppercase tracking-[0.25em] text-emerald-300" data-i18n="education.kicker">
            Formações
          </p>
          <h2 class="text-2xl font-semibold text-white sm:text-3xl" data-i18n="education.title">
            Educação & certificações
          </h2>
        </div>
        <div class="grid gap-6 lg:grid-cols-2">
          <article class="rounded-2xl border border-white/10 bg-white/5 p-6">
            <p class="text-xs font-semibold uppercase tracking-[0.2em] text-emerald-300" data-i18n="education.item1.institution">
              Universidade Cruzeiro do Sul
            </p>
            <h3 class="text-lg font-semibold text-white" data-i18n="education.item1.title">
              Bacharelado, Análise de Sistemas de Computação
            </h3>
            <p class="text-sm text-slate-400" data-i18n="education.item1.period">jul de 2019 - jun de 2021</p>
          </article>
          <article class="rounded-2xl border border-white/10 bg-white/5 p-6">
            <p class="text-xs font-semibold uppercase tracking-[0.2em] text-emerald-300" data-i18n="education.item2.institution">
              Centro Paula Souza ETEC João Belarmino
            </p>
            <h3 class="text-lg font-semibold text-white" data-i18n="education.item2.title">
              Tecnólogo, Ensino Médio Integrado ao Técnico de Informática
            </h3>
            <p class="text-sm text-slate-400" data-i18n="education.item2.period">2013 - 2015</p>
          </article>
        </div>
      </section>

      <section id="certificacoes" class="mt-16 scroll-mt-24 space-y-8">
        <div class="space-y-2">
          <p class="text-sm font-semibold uppercase tracking-[0.25em] text-emerald-300" data-i18n="certifications.kicker">
            Licenças e certificados
          </p>
          <h2 class="text-2xl font-semibold text-white sm:text-3xl" data-i18n="certifications.title">
            Credenciais profissionais
          </h2>
        </div>
        <div class="grid gap-6 lg:grid-cols-3">
          <article class="rounded-2xl border border-white/10 bg-white/5 p-6">
            <p class="text-xs font-semibold uppercase tracking-[0.2em] text-emerald-300" data-i18n="certifications.item1.issuer">
              Zup Innovation
            </p>
            <h3 class="text-lg font-semibold text-white" data-i18n="certifications.item1.title">
              Stackspot BIT (Practitioner)
            </h3>
            <p class="text-sm text-slate-400" data-i18n="certifications.item1.period">Verificação emitida em jul de 2025</p>
          </article>
          <article class="rounded-2xl border border-white/10 bg-white/5 p-6">
            <p class="text-xs font-semibold uppercase tracking-[0.2em] text-emerald-300" data-i18n="certifications.item2.issuer">
              Udemy
            </p>
            <h3 class="text-lg font-semibold text-white" data-i18n="certifications.item2.title">
              The Complete Apache Kafka Practical Guide
            </h3>
            <p class="text-sm text-slate-400" data-i18n="certifications.item2.period">Verificação emitida em fev de 2023</p>
            <p class="mt-2 text-xs text-slate-400" data-i18n="certifications.item2.code">
              Código da credencial: UC-080a2452-ccd8-4edd-8178-de50b417c430
            </p>
          </article>
          <article class="rounded-2xl border border-white/10 bg-white/5 p-6">
            <p class="text-xs font-semibold uppercase tracking-[0.2em] text-emerald-300" data-i18n="certifications.item3.issuer">
              Zup Innovation
            </p>
            <h3 class="text-lg font-semibold text-white" data-i18n="certifications.item3.title">
              IA generativa
            </h3>
            <p class="text-sm text-slate-400" data-i18n="certifications.item3.period">Verificação emitida em jul de 2025</p>
          </article>
        </div>
      </section>

      <section id="habilidades" class="mt-16 scroll-mt-24 space-y-8">
        <div class="space-y-2">
          <p class="text-sm font-semibold uppercase tracking-[0.25em] text-emerald-300" data-i18n="skills.kicker">
            Habilidades
          </p>
          <h2 class="text-2xl font-semibold text-white sm:text-3xl" data-i18n="skills.title">
            Stack principal
          </h2>
        </div>
        <div class="grid gap-4 sm:grid-cols-2 lg:grid-cols-3">
          {[
            { key: "skills.item1", label: "C#, .NET 8 e ASP.NET Core" },
            { key: "skills.item2", label: "Arquitetura limpa, DDD e CQRS" },
            { key: "skills.item3", label: "Mensageria com RabbitMQ e AWS SQS" },
            { key: "skills.item4", label: "SQL Server, PostgreSQL e Redis" },
            { key: "skills.item5", label: "Docker, Kubernetes (EKS) e IaC" },
            { key: "skills.item6", label: "CI/CD com GitHub Actions e pipelines AWS" },
          ].map((skill) => (
            <div
              class="rounded-xl border border-white/10 bg-white/5 px-4 py-3 text-sm text-slate-200"
              data-i18n={skill.key}
            >
              {skill.label}
            </div>
          ))}
        </div>
      </section>

      <section id="projetos" class="mt-16 scroll-mt-24 space-y-8">
        <div class="space-y-2">
          <p class="text-sm font-semibold uppercase tracking-[0.25em] text-emerald-300" data-i18n="projects.kicker">
            Projetos
          </p>
          <h2 class="text-2xl font-semibold text-white sm:text-3xl" data-i18n="projects.title">
            Cases de impacto
          </h2>
        </div>
        <div class="grid gap-6 lg:grid-cols-3">
          {[
            {
              title: "Worker em tempo real",
              titleKey: "projects.item1.title",
              description:
                "Processamento contínuo de alterações na estrutura comercial para democratizar dados e abastecer múltiplos produtos internos.",
              descriptionKey: "projects.item1.description",
              stack: ".NET 8.0 · Kafka · AWS · Postgres",
            },
            {
              title: "Plataforma de Previsão de Demanda",
              titleKey: "projects.item2.title",
              description:
                "Planejamento com dados de vendas e ML, permitindo ajustar curvas estatísticas para otimizar produção, logística e vendas.",
              descriptionKey: "projects.item2.description",
              stack: "Kotlin · RabbitMQ · Postgres · AWS · GCP",
            },
            {
              title: "Cubiscan",
              titleKey: "projects.item3.title",
              description:
                "Sistema com leitor Cubiscan para capturar códigos, dimensões e peso, enviando os dados ao SAP EWM para organização e otimização.",
              descriptionKey: "projects.item3.description",
              stack: "Python · AWS · SAP EWM",
            },
          ].map((project) => (
            <article class="rounded-2xl border border-white/10 bg-white/5 p-6">
              <h3 class="text-lg font-semibold text-white" data-i18n={project.titleKey}>
                {project.title}
              </h3>
              <p class="mt-3 text-sm text-slate-300" data-i18n={project.descriptionKey}>
                {project.description}
              </p>
              <p class="mt-4 text-xs font-semibold uppercase tracking-[0.2em] text-emerald-200">
                {project.stack}
              </p>
            </article>
          ))}
        </div>
      </section>

      <section id="referencias" class="mt-16 scroll-mt-24 space-y-8">
        <div class="space-y-2">
          <p
            class="text-sm font-semibold uppercase tracking-[0.25em] text-emerald-300"
            data-i18n="references.kicker"
          >
            Referências
          </p>
          <h2 class="text-2xl font-semibold text-white sm:text-3xl" data-i18n="references.title">
            Vamos conversar?
          </h2>
        </div>
        <div class="grid gap-6 lg:grid-cols-2">
          <article class="rounded-2xl border border-white/10 bg-white/5 p-6">
            <h3 class="text-lg font-semibold text-white" data-i18n="references.available.title">
              Disponível para
            </h3>
            <ul class="mt-4 space-y-2 text-sm text-slate-300">
              <li data-i18n="references.available.item1">
                Projetos com foco em APIs, integrações e sistemas críticos.
              </li>
              <li data-i18n="references.available.item2">
                Consultoria em arquitetura e modernização de legado.
              </li>
              <li data-i18n="references.available.item3">
                Mentoria de times backend e squads fullstack.
              </li>
            </ul>
          </article>
          <article class="rounded-2xl border border-white/10 bg-white/5 p-6">
            <h3 class="text-lg font-semibold text-white" data-i18n="references.contact.title">Contato</h3>
            <ul class="mt-4 space-y-3 text-sm text-slate-300">
              <li data-i18n="references.contact.item1">Email: lucaguiraldello@hotmail.com</li>
              <li data-i18n="references.contact.item2">LinkedIn: linkedin.com/in/luca-guiraldello</li>
              <li data-i18n="references.contact.item3">GitHub: github.com/luca0898</li>
            </ul>
          </article>
        </div>
      </section>
    </main>

    <div
      id="cv-modal"
      class="fixed inset-0 z-50 hidden items-center justify-center bg-slate-950/80 px-4 py-6 backdrop-blur-sm"
      role="dialog"
      aria-modal="true"
      aria-hidden="true"
    >
      <div class="relative w-full max-w-lg rounded-3xl border border-white/10 bg-slate-900 p-6 shadow-2xl sm:p-8">
        <button
          id="cv-modal-close"
          type="button"
          class="absolute right-4 top-4 rounded-full border border-white/10 bg-white/5 px-3 py-1 text-xs font-semibold text-white transition hover:border-white/30 hover:bg-white/10"
          aria-label="Fechar modal"
          data-i18n="cv.modal.close"
        >
          Fechar
        </button>
        <div class="space-y-3">
          <p class="text-sm font-semibold uppercase tracking-[0.25em] text-emerald-300" data-i18n="cv.modal.kicker">
            Currículo
          </p>
          <h3 class="text-2xl font-semibold text-white" data-i18n="cv.modal.title">
            Escolha o formato do CV
          </h3>
          <p class="text-sm text-slate-300" data-i18n="cv.modal.description">
            Baixe o resumo ou solicite o CV completo por e-mail.
          </p>
        </div>
        <div class="mt-6 flex flex-col gap-3 sm:flex-row">
          <a
            href="/cv/Luca-Guiraldello-resumo-pt.pdf"
