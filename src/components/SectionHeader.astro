---
const { kicker, title, kickerKey, titleKey } = Astro.props;
---

<div class="space-y-2">
  <p
    class="text-sm font-semibold uppercase tracking-[0.25em] text-emerald-300"
    data-i18n={kickerKey}
  >
    {kicker}
  </p>
  <h2 class="text-2xl font-semibold text-white sm:text-3xl" data-i18n={titleKey}>
    {title}
  </h2>
</div>
