---
import SectionHeader from "./SectionHeader.astro";

const projects = [
  {
    title: "Worker em tempo real",
    titleKey: "projects.item1.title",
    description:
      "Processamento contínuo de alterações na estrutura comercial para democratizar dados e abastecer múltiplos produtos internos.",
    descriptionKey: "projects.item1.description",
    stack: ".NET 8.0 · Kafka · AWS · Postgres",
  },
  {
    title: "Plataforma de Previsão de Demanda",
    titleKey: "projects.item2.title",
    description:
      "Planejamento com dados de vendas e ML, permitindo ajustar curvas estatísticas para otimizar produção, logística e vendas.",
    descriptionKey: "projects.item2.description",
    stack: "Kotlin · RabbitMQ · Postgres · AWS · GCP",
  },
  {
    title: "Cubiscan",
    titleKey: "projects.item3.title",
    description:
      "Sistema com leitor Cubiscan para capturar códigos, dimensões e peso, enviando os dados ao SAP EWM para organização e otimização.",
    descriptionKey: "projects.item3.description",
    stack: "Python · AWS · SAP EWM",
  },
];
---

<section id="projetos" class="mt-16 scroll-mt-24 space-y-8">
  <SectionHeader
    kicker="Projetos"
    title="Cases de impacto"
    kickerKey="projects.kicker"
    titleKey="projects.title"
  />
  <div class="grid gap-6 lg:grid-cols-3">
    {projects.map((project) => (
      <article class="rounded-2xl border border-white/10 bg-white/5 p-6">
        <h3 class="text-lg font-semibold text-white" data-i18n={project.titleKey}>
          {project.title}
        </h3>
        <p class="mt-3 text-sm text-slate-300" data-i18n={project.descriptionKey}>
          {project.description}
        </p>
        <p class="mt-4 text-xs font-semibold uppercase tracking-[0.2em] text-emerald-200">
          {project.stack}
        </p>
      </article>
    ))}
  </div>
</section>
